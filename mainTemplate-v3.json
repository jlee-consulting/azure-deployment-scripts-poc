{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "name": {
        "type": "string",
        "defaultValue": "\\\"deploymentScripts PoC\\\""
      },
      "utcValue": {
        "type": "string",
        "defaultValue": "[utcNow()]"
      }
    },
    "variables": {
      "deploymentName" : "runPowerShellWithOutput-v3"
    },
    "resources": [
      {
        "type": "Microsoft.Resources/deploymentScripts",
        "apiVersion": "2020-10-01",
        "name": "[variables('deploymentName')]",
        "location": "[resourceGroup().location]",
        "kind": "AzurePowerShell",
        "properties": {
          "forceUpdateTag": "[parameters('utcValue')]",
          "azPowerShellVersion": "5.0",
          "primaryScriptUri": "https://raw.githubusercontent.com/jlee-consulting/azure-deployment-scripts-poc/main/azure-powershell/azure-powershell-v3.ps1",
          "arguments": "[concat('-subscriptionId', ' ', subscription().subscriptionId)]",
          "timeout": "PT1H",
          "cleanupPreference": "OnSuccess",
          "retentionInterval": "P1D"
        }
      }
    ],
    "outputs": {
      "result": {
        "value": "[reference(variables('deploymentName')).outputs.text]",
        "type": "string"
      }
    }
}